
@model Assignment
@{
    ViewData["Title"] = "Edit Assignment";
}

<h1>Editing Assignment of @Model.Employee.LastName, @Model.Employee.FirstName to @Model.Client.ClientName</h1>

<form method="post">

    <input type="hidden" asp-for=@Model.AssignmentId />
    <input type="hidden" asp-for=@Model.ClientId />
    <input type="hidden" asp-for=@Model.EmployeeId />
    <div class="form-group">
        <label asp-for=@Model.Role></label>
        <input asp-for=@Model.Role class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for=@Model.StartDate></label>
        <input asp-for=@Model.StartDate class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for=@Model.EndDate></label>
        <input asp-for=@Model.EndDate class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>

</form>